  "version": "0.2.0",
  "configurations": [
    {
      "name": "Box",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "box",
        "-f=hack/Morgend채mmerung.mp3",
        "-o=file",
        "--chunks=32",
        "--height=200",
        "--gap=1",
        "--rounded=0",
        "--downsampling-factor=4",
        "--alignment=center"
      ]
    },
    {
      "name": "Wave",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "wave",
        "-f=hack/Morgend채mmerung.mp3",
        "-o=file",
        "--downsampling-factor=4",
        "--window=plank-taper",
        "--normalize",
        "--window-p=0.05",
        "--chunks=128",
        "--stroke-width=4",
        "--stroke-color=#0ea5e9",
        "--height=100",
        "--interpolation=fritsch-carlson",
      ]
    },
    {
      "name": "Sweep",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "sweep",
        "-f=hack/Morgend채mmerung.mp3",
        "-o=file",
        "--downsampling-factor=8",
        "--window=plank-taper",
        "--window-p=0.08",
        "--chunks=64",
        "--normalize",
        // "--aggregator=rounded-avg",
        "--stroke-width=2",
        // "--stroke-color=white",
        "--stroke-color=#0c4a6e",
        "--height=100",
        // "--fill-color=rgb(10 10 10 / 0.5)",
        "--fill-color=#0ea5e9",
        "--interpolation=akima",
      ]
    },
    {
      "name": "Line",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "line",
        "-f=hack/Morgend채mmerung.mp3",
        "-o=file",
        "--downsampling-factor=4",
        "--window=plank-taper",
        "--window-p=0.05",
        "--chunks=512",
        "--normalize",
        "--stroke-width=2",
        "--stroke-color=#0c4a6e",
        "--height=100",
        "--interpolation=fritsch-carlson",
      ]
    }
  ]
}
